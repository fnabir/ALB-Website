//no extension
<IfModule mod_rewrite.c>
RewriteEngine on
RewriteRule ^/?(.*).(php|html|htm|webp)$ /$1 [R=301,L]
</IfModule>

//no slash
<IfModule mod_rewrite.c>
RewriteEngine on
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]
</IfModule>

//Error
<IfModule mod_rewrite.c>
RewriteEngine on
ErrorDocument 404 http://www.asianliftbangladesh.com/404.html
</IfModule>

//www
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www.asianliftbangladesh.com$
RewriteRule (.*) https://asianliftbangladesh.com/$1 [R=301,L]
</IfModule>

//HTTPS
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteCond %{SERVER_PORT} !^443$
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

//Caching schema
<FilesMatch "\.(jpg|png|webp|mp4|js|css|icon)$">
Header set Cache-Control "public, max-age=160704000"
</FilesMatch>
<FilesMatch "\.(html)$">
Header set Cache-Control "public, max-age=172800"
</FilesMatch>

## LEVERAGE BROWSER CACHING ##
<IfModule mod_expires.c>
ExpiresActive On
ExpiresByType image/jpg "access 1 month"
ExpiresByType image/jpeg "access 1 month"
ExpiresByType image/gif "access 1 month"
ExpiresByType image/png "access 1 month"
ExpiresDefault "access 30 days"
</IfModule>
 
## Fonts caching for a year
<FilesMatch "\.(eot|svg|ttf|woff)$">
Header set Cache-Control "max-age=29030400, public"
</FilesMatch>
 
## Cache Icon, PDF and Flash movie for a year
<FilesMatch "\.(ico|pdf|flv|swf)$">
Header set Cache-Control "max-age=29030400, public"
</FilesMatch>
 
## Cache CSS and JS for 1 week
<FilesMatch "\.(xml|txt|css|js)$">
Header set Cache-Control "max-age=604800, proxy-revalidate"
</FilesMatch>
 
## LEVERAGE BROWSER CACHING ##

//Password Protect file
<Files /projects/details/1>
AuthName "Prompt"
AuthType Basic
AuthUserFile /projects/details/. htpasswd
Require valid-user
